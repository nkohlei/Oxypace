{
    "name": "globalmessage-backend",
    "version": "1.0.2",
    "description": "Social media platform backend",
    "main": "server.js",
    "type": "module",
    "engines": {
        "node": "20.x"
    },
    "scripts": {
        "dev": "node --watch server.js",
        "start": "node server.js",
        "build": "CI=false NODE_OPTIONS=\"--max-old-space-size=4096\" cd client && npm install --no-package-lock --legacy-peer-deps && npm run build",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write \"**/*.{js,jsx,json,md}\" --ignore-path .gitignore"
    },
    "keywords": [
        "social-media",
        "messaging",
        "real-time"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@aws-sdk/client-s3": "^3.984.0",
        "axios": "^1.13.4",
        "bcryptjs": "^2.4.3",
        "connect-mongo": "^6.0.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^8.2.1",
        "express-session": "^1.17.3",
        "express-validator": "^7.3.1",
        "form-data": "^4.0.5",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.21.0",
        "multer": "^1.4.5-lts.1",
        "multer-s3": "^3.0.1",
        "nodemailer": "^6.9.7",
        "passport": "^0.7.0",
        "passport-google-oauth20": "^2.0.0",
        "rss-parser": "^3.13.0",
        "sitemap": "^9.0.0",
        "socket.io": "^4.6.1"
    },
    "devDependencies": {
        "eslint": "^9.17.0",
        "eslint-plugin-security": "^3.0.1",
        "prettier": "^3.8.1"
    }
}
