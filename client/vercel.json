{
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                },
                {
                    "key": "Permissions-Policy",
                    "value": "camera=(), microphone=(), geolocation=(), interest-cohort=()"
                },
                {
                    "key": "X-DNS-Prefetch-Control",
                    "value": "off"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://globalmessage-backend.koyeb.app/api/$1"
        },
        {
            "source": "/r2-media/(.*)",
            "destination": "https://pub-094a78010abf4ebf9726834268946cb8.r2.dev/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}