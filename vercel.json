{
    "rewrites": [
        {
            "source": "/sitemap.xml",
            "destination": "/api/sitemap.js"
        },
        {
            "source": "/api/sitemap",
            "destination": "/api/sitemap.js"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/client/index.html"
        }
    ]
}